{
    "name": "mybudgetevento",
    "version": "0.1.0",
    "private": true,
    "description": "Gestione budget eventi. MYBUDGETEVENTO: Next.js, Supabase, Tailwind, React.",
    "scripts": {
        "dev": "npm run autocommit && next dev",
        "build": "next build",
        "typecheck": "tsc -p tsconfig.json --noEmit",
        "start": "next start",
        "clean": "node -e \"require('fs').rmSync('.next',{recursive:true,force:true});console.log('Cleaned .next')\"",
        "lint": "eslint",
        "check:integrations": "node scripts/check-integrations.mjs",
        "env:verify": "node scripts/verify-env.mjs",
        "db:up": "docker compose up -d",
        "db:down": "docker compose down -v",
        "db:connect": "node connect-databases.mjs",
        "db:test": "node test-db-connection.mjs",
        "sql:exec": "node scripts/run-sql.mjs",
        "sql:init:all": "node scripts/run-sql.mjs supabase-COMPLETE-SETUP.sql supabase-seed-functions.sql supabase-suppliers-seed.sql supabase-locations-seed.sql supabase-churches-seed.sql supabase-total-budget-patch.sql supabase-per-spouse-budget-patch.sql supabase-spend-type-patch.sql supabase-expenses-patch.sql supabase-payment-providers-patch.sql supabase-wedding-cards-table.sql supabase-traditions-mx.sql supabase-traditions-extend-and-seed.sql supabase-traditions-indexes.sql supabase-traditions-policies.sql supabase-supported-lists.sql supabase-storage-policies.sql",
        "sql:init:traditions": "node scripts/run-sql.mjs supabase-traditions-mx.sql supabase-traditions-extend-and-seed.sql supabase-traditions-seed-more.sql supabase-traditions-policies.sql",
        "sql:init:lists": "node scripts/run-sql.mjs supabase-supported-lists.sql",
        "sql:init:storage": "node scripts/run-sql.mjs supabase-storage-policies.sql",
        "sql:seed:events": "node scripts/run-sql.mjs supabase-events-seed.sql",
        "sql:init:core-events": "node scripts/run-sql.mjs supabase-core-events-schema.sql supabase-seed-event-types.sql supabase-seed-event-categories.sql",
        "sql:seed:core-demo": "node scripts/run-sql.mjs supabase-demo-public-event.sql",
        "sql:seed:all": "node scripts/run-sql.mjs supabase-events-seed.sql supabase-india-seed.sql supabase-mexico-seed.sql supabase-mx-seed-locations.sql supabase-mx-seed-suppliers.sql supabase-traditions-extend-and-seed.sql supabase-traditions-seed-more.sql supabase-traditions-policies.sql",
        "geo:import": "node scripts/geo-import.mjs",
        "autocommit": "node scripts/autocommit-once.mjs",
        "check:utf8": "node scripts/check-utf8.mjs",
        "check:utf8:strict": "node scripts/check-utf8.mjs --strict",
        "dev:ac": "npm run autocommit && next dev",
        "autocommit:watch": "node scripts/autocommit-watch.mjs",
        "sql:seed:birthday-50": "node scripts/seed-50th-birthday.mjs",
        "codex:sync": "node scripts/codex-sync-db.mjs",
        "codex:check": "node scripts/codex-sync-db.mjs supabase-quick-check.sql",
        "codex:diagnostics": "node scripts/codex-sync-db.mjs supabase-diagnostics-complete.sql",
        "test": "jest"
    },
    "engines": {
        "node": ">=18.17.0"
    },
    "dependencies": {
        "@remotion/player": "^4.0.366",
        "@stripe/stripe-js": "^8.1.0",
        "@supabase/supabase-js": "^2.76.1",
        "clsx": "^2.1.1",
        "dotenv": "^16.4.5",
        "embla-carousel-react": "^8.6.0",
        "jspdf": "^3.0.3",
        "next": "16.0.0",
        "next-intl": "^4.4.0",
        "node-fetch": "^3.3.2",
        "react": "19.2.0",
        "react-dom": "19.2.0",
        "remotion": "^4.0.366",
        "resend": "^6.2.2",
        "stripe": "^19.1.0"
    },
    "devDependencies": {
        "@babel/core": "^7.28.0",
        "@babel/preset-env": "^7.28.5",
        "@babel/preset-react": "^7.28.5",
        "@babel/preset-typescript": "^7.28.5",
        "@tailwindcss/postcss": "^4",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@types/jest": "^30.0.0",
        "@types/node": "^20",
        "@types/react-dom": "^19",
        "babel-jest": "^30.2.0",
        "babel-plugin-dynamic-import-node": "^2.3.3",
        "eslint": "^9",
        "eslint-config-next": "16.0.0",
        "jest": "^30.2.0",
        "jest-environment-jsdom": "^30.2.0",
        "pg": "^8.13.1",
        "tailwindcss": "^4",
        "typescript": "^5"
    }
}
