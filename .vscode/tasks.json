{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run SQL: Current File (local PG)",
			"type": "shell",
			"command": "node",
			"args": [
				"scripts/run-sql.mjs",
				"${file}"
			],
			"options": {
				"env": {
					"SUPABASE_DB_URL": "postgres://postgres:postgres@localhost:5433/ibds"
				}
			},
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "Run SQL: Init schema + patches (local PG)",
			"type": "shell",
			"command": "node",
			"args": [
				"scripts/run-sql.mjs",
				"supabase-COMPLETE-SETUP.sql",
				"supabase-ALL-PATCHES.sql"
			],
			"options": {
				"env": {
					"SUPABASE_DB_URL": "postgres://postgres:postgres@localhost:5433/ibds"
				}
			},
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "Run SQL: Events seed (local PG)",
			"type": "shell",
			"command": "node",
			"args": [
				"scripts/run-sql.mjs",
