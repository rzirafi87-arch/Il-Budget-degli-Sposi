{
  // VS Code launch configurations for Next.js (Node + Browser)
  "$schema": "https://json.schemastore.org/launch.json",
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Next.js: Dev (Node)",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "env": {
        "NODE_OPTIONS": "--inspect=9229",
        "PORT": "3000"
      },
      "console": "integratedTerminal",
      "autoAttachChildProcesses": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "Attach: Node (9229)",
      "type": "pwa-node",
      "request": "attach",
      "port": 9229,
      "address": "localhost",
      "restart": true,
      "continueOnAttach": true,
      "skipFiles": [
        "<node_internals>/**",
        "**/node_modules/**"
      ]
    },
    {
      "name": "Chrome: http://localhost:3000",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true
    }
  ],
  "compounds": [
    {
      "name": "Next.js: Fullâ€‘stack Debug",
      "configurations": ["Next.js: Dev (Node)", "Chrome: http://localhost:3000"],
      "stopAll": true
    }
  ]
}

